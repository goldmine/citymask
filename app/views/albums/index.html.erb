<h1>Listing albums</h1>

<table>
  <tr>
  </tr>

<% @albums.each do |album| %>
  <tr>
	<td><%= album.name %></td>
	<td><%= album.description %></td>
	<td><%= album.photos_count %></td>
    <td><%= link_to 'Show', user_album_path(@user, album) %></td>
    <td><%= link_to 'Edit', edit_user_album_path(@user, album) %></td>
    <td><%= link_to 'Destroy', user_album_path(@user, album), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New album', new_user_album_path(@user) %>