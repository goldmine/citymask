<h2>更新个人信息</h2>

<%= error_messages_for :user %>

<% form_for :user, 
            :url => user_url(@user), 
            :html => { :method => :put } do |f| -%>
  <p>邮箱:<br /><%= f.text_field :email, :size => 60 %></p>
  <p>博客标题:<br /><%= f.text_field :blog_title, :size => 60 %></p>
  <p>是否允许评论:<br /><%= f.check_box :enable_comments, :default => true%></p>
  <p>密码:<br /><%= f.password_field :password, :size => 60 %></p>
  <p>密码确认:<br />
    <%= f.password_field :password_confirmation, :size => 60 %></p>
  <%= submit_tag 'Save' %>
<% end -%>
